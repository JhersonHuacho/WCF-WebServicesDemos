<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7" />
    </startup>
  <system.serviceModel>
    <bindings>
      <!--basicHttpBinding-->
      <!--<netTcpBinding-->
      <!--<mexHttpBinding-->
    </bindings>
    <services>
      <service name="HelloService.HelloServiceWCF" behaviorConfiguration="mexBehaviour">
        <endpoint
          address="HelloServiceWCF"
          binding="basicHttpBinding"
          contract="HelloService.IHelloServiceWCF">          
        </endpoint>
        <endpoint
          address="HelloServiceWCF"
          binding="netTcpBinding"
          contract="HelloService.IHelloServiceWCF">
        </endpoint>
        <endpoint address="mex" binding="mexHttpBinding" contract="IMetadataExchange"></endpoint>
        <host>
          <baseAddresses>
            <add baseAddress="http://localhost:8080/HelloServiceWCF"/>
            <add baseAddress="net.tcp://localhost:8081/HelloServiceWCF"/>
          </baseAddresses>
        </host>
      </service>
    </services>
    <behaviors>
      <serviceBehaviors>
        <behavior name="mexBehaviour">
          <serviceMetadata httpGetEnabled="true"/>
        </behavior>
      </serviceBehaviors>
    </behaviors>
  </system.serviceModel>
</configuration>